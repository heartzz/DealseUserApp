<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <ImageView
            android:id="@+id/imgLimited"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_dummy_lim"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/l_right_cor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:maxHeight="@dimen/_120sdp"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtFlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="FLAT 150* OFF"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOfferNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Offers For New Users"
                android:gravity="center"

                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="8sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOfferNewDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="In All Home Furniture Royaloak Interiors"
                android:gravity="center|start"

                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_3sdp"
                android:textSize="10sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOrderAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Order At Rs.499"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingTop="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/txt_round_corn"
                android:paddingBottom="@dimen/_3sdp"
                android:textColor="#9F8C62"
                android:textSize="12sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>