<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <ImageView
            android:id="@+id/imgLimited"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_180sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_dummy_near"

            android:scaleType="fitXY"
            />
        <ImageView

            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_180sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_near_place_home"

            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:maxHeight="@dimen/_120sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtFlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:text="FLAT 150* OFF"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOfferNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/regular"
                android:gravity="center"

                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:text="Offers For New Users"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOfferNewDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/bold"
                android:gravity="center|start"

                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:text="In All Home Furniture Royaloak Interiors"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOrderAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/txt_round_corn"
                android:fontFamily="@font/bold"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="Order At Rs.499"
                android:textColor="#9F8C62"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>